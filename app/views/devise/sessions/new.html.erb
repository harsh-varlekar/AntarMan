<div class="devise-session-container">
  <div class="icon-size">
    <i class="fa-solid fa-brain"></i>
  </div>
  <h1 class="devise-session-title">Mental Health Support</h1>
  <p class="devise-session-subtitle">Sign in to connect with your AI support companion</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-session-form' }) do |f| %>
    <div class="devise-session-field">
      <%= f.label :email, "Email address" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: 'devise-session-input' %>
    </div>

    <div class="devise-session-field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "••••••••", class: 'devise-session-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="devise-session-remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Remember me" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Sign In", class: 'devise-session-submit' %>
    </div>
  <% end %>

  <div class="devise-session-links">
    <%= link_to "Forgot password?", new_password_path(resource_name), class: 'devise-session-link' %>
  </div>

  <div class="devise-session-divider"></div>

  <div class="devise-session-footer">
    <p class="devise-session-footer-text">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'devise-session-link' %></p>
    <p class="devise-session-emergency">In case of emergency, please contact your local emergency services or crisis hotline immediately.</p>
  </div>
</div>