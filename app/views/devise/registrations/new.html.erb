<div class="mindchat-signup">
  <h1 class="title">Start Your Mental Health Journey</h1>
  <p class="subtitle">24/7 AI-powered support, completely confidential and judgment-free</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-section">
      <h3 class="section-title">First Name</h3>
      <%= f.text_field :first_name, placeholder: "Enter first name", class: "form-input" %>
    </div>

    <div class="form-section">
      <h3 class="section-title">Last Name</h3>
      <%= f.text_field :last_name, placeholder: "Enter last name", class: "form-input" %>
    </div>

    <div class="form-section">
      <h3 class="section-title">Email Address</h3>
      <%= f.email_field :email, placeholder: "you@example.com", autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-section">
      <h3 class="section-title">Password</h3>
      <%= f.password_field :password, placeholder: "Create a secure password", autocomplete: "new-password", class: "form-input" %>
      <% if @minimum_password_length %>
        <p class="hint">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
    </div>

    <div class="form-section">
      <h3 class="section-title">Age Group</h3>
      <%#= f.select :age_group, options_for_select(["Under 18", "18-24", "25-34", "35-44", "45-54", "55-64", "65+"], selected: "Select age group"), {}, class: "form-select" %>
    </div>

    <div class="checkbox-section">
      <%#= f.check_box :terms_accepted %>
      <%#= f.label :terms_accepted, "I agree to the Terms of Service and Privacy Policy", class: "checkbox-label" %>
    </div>

    <div class="actions">
      <%= f.submit "Create Account", class: "submit-button" %>
    </div>
  <% end %>

  <div class="login-link">
    Already have an account? <%= link_to "Log in", new_session_path(resource_name) %>
  </div>

  <footer class="footer">
    <p>Â© 2025 MindChat. All rights reserved.</p>
    <p class="crisis-line">If you're experiencing a crisis, please call 988 for immediate help</p>
  </footer>
</div>